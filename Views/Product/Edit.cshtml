@model projektdotnet.Models.ProductModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Uppdatera</h1>

<h4>Produkt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Namn</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Beskrivning</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Pris</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryModelId" class="control-label">Kategori</label>
                <select asp-for="CategoryModelId" class="form-control" asp-items="ViewBag.CategoryModelId"></select>
                <span asp-validation-for="CategoryModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label>Nuvarande bild</label>
            @if (!string.IsNullOrEmpty(Model.ImageName))
            {
                <img src="~/images/@Model.ImageName" alt="Product Image" style="width:100px; height:auto;" />
            }
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Bildfil</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tillbaka till listan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
